<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <solid android:color="@color/primary_color_variant" />
            <stroke android:width="1dp" android:color="@color/app_primary_color" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/app_primary_color" />
            <stroke android:width="1dp" android:color="@color/primary_color_variant" />
        </shape>
    </item>
</selector>