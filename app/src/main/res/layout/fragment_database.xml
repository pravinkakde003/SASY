<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewToolTip"
            style="@style/AppTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/distance_value_in_meter"
            android:textColor="@color/black_overlay"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/buttonIncrementDecrement"
            app:layout_constraintStart_toStartOf="@id/buttonIncrementDecrement"
            app:layout_constraintTop_toTopOf="parent" />

        <com.sasy.nontag.utils.IncreaseDecreaseButton
            android:id="@+id/buttonIncrementDecrement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="92dp"
            app:activeIconColor="@color/black"
            app:initNumber="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewToolTip"
            app:maxNumber="99999"
            app:minNumber="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSetDb"
            style="@style/PrimaryColoredButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="8dp"
            android:text="@string/set"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/buttonIncrementDecrement"
            app:layout_constraintStart_toStartOf="@id/buttonIncrementDecrement"
            app:layout_constraintTop_toBottomOf="@id/buttonIncrementDecrement" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/dataSentStatusTextView"
        style="@style/AppTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent_green"
        android:elevation="12dp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>