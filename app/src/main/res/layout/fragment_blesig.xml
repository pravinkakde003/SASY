        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textViewGetBlesig"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/border_gray"
            android:gravity="center_horizontal"
            android:paddingVertical="11dp"
            android:text="-"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/buttonGetBlesig"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekBar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonGetBlesig"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:text="@string/get"
            app:layout_constraintEnd_toStartOf="@+id/buttonSetBlesig"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textViewGetBlesig"
            app:layout_constraintTop_toBottomOf="@id/seekBar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSetBlesig"
            style="@style/PrimaryColoredButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:text="@string/set"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/buttonGetBlesig"
            app:layout_constraintTop_toBottomOf="@id/seekBar" />
