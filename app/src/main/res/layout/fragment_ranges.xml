<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewToolTip"
            style="@style/AppTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/distance_value_in_meter"
            android:textColor="@color/black_overlay"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/buttonIncrementDecrement"
            app:layout_constraintStart_toStartOf="@id/buttonIncrementDecrement"
            app:layout_constraintTop_toTopOf="parent" />

        <com.sasy.nontag.utils.IncreaseDecreaseButton
            android:id="@+id/buttonIncrementDecrement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:activeIconColor="@color/black"
            app:initNumber="0"
            app:layout_constraintEnd_toStartOf="@id/textView_get_range"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewToolTip"
            app:maxNumber="99999"
            app:minNumber="0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_set_range"
            style="@style/PrimaryColoredButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginVertical="8dp"
            android:text="@string/set_range"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/buttonIncrementDecrement"
            app:layout_constraintStart_toStartOf="@id/buttonIncrementDecrement"
            app:layout_constraintTop_toBottomOf="@id/buttonIncrementDecrement" />

        <TextView
            android:id="@+id/textView_get_range"
            style="@style/AppTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/border_gray"
            android:paddingHorizontal="56dp"
            android:paddingVertical="13dp"
            android:text="-"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonIncrementDecrement"
            app:layout_constraintTop_toTopOf="@+id/buttonIncrementDecrement" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_get_range"
            style="@style/PrimaryColoredButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/get_range"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@id/textView_get_range"
            app:layout_constraintStart_toStartOf="@id/textView_get_range"
            app:layout_constraintTop_toTopOf="@+id/button_set_range" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>